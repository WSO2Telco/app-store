<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
		http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

	<jaxrs:server id="ForumService" address="/forumUser">
		<jaxrs:serviceBeans>
			<ref bean="ForumServiceBean" />
			
		</jaxrs:serviceBeans>
		
		<jaxrs:providers>
			<ref bean="authenticationFilter" />
		</jaxrs:providers> 
	</jaxrs:server>
	
	<jaxrs:server id="ForumServiceSec" address="/">
		<jaxrs:serviceBeans>
			<ref bean="AuthenticationServiceBean" />
			<ref bean="MockServiceBean" />
			<ref bean="UserServiceBean" />
			<ref bean="TokenServiceBean" />
			<ref bean="SwaggerServiceBean"/>
			<!--ref bean="ResponseFilterServiceBean"/-->
		</jaxrs:serviceBeans>

	</jaxrs:server>

	<bean id="AuthenticationServiceBean"
		class="com.wso2telco.dep.storeservice.resource.AuthenticationService" />
	<bean id="ForumServiceBean"
		class="com.wso2telco.dep.storeservice.resource.ForumService" />
	<bean id="MockServiceBean"
		class="com.wso2telco.dep.storeservice.resource.MockService" />
	<bean id="UserServiceBean"
		class="com.wso2telco.dep.storeservice.resource.UserService" />
	<bean id="TokenServiceBean"
		  class="com.wso2telco.dep.storeservice.resource.TokenService" />
	 <bean id="authenticationFilter"
		class="org.appstore.core.authfilter.Authentication" />
	<bean id="SwaggerServiceBean"
		  class="com.wso2telco.dep.storeservice.resource.SwaggerService" />
	<!--moved to the manage-service-->
	<!--bean id="ResponseFilterServiceBean"
		  class="com.wso2telco.dep.storeservice.resource.ResponseFilterService" /-->
</beans>
